<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailsActivity"
    tools:showIn="@layout/activity_details">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="150dp"
        android:orientation="vertical"

        >


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
            card_view:cardBackgroundColor="#CDF9F9F9"
            card_view:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/title_size"
                    android:padding="12dp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/title"
                    android:text="@string/upa_title"
                    android:textAllCaps="true"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv2"
            card_view:cardBackgroundColor="#CDF9F9F9"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            >
            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <!-- 2 columns -->
                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:textSize="@dimen/content_size"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/street_tag"
                        android:text="@string/upa_street_tag" />
                    <View
                        android:id="@+id/line1"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="35dp"
                        android:background="@color/mediumGrey"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/content_size"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/street"
                        android:ellipsize="none"
                        android:maxLines="100"
                        android:scrollHorizontally="false"
                        android:text="@string/upa_street" />
                </TableRow>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/mediumGrey"
                    />

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/content_size"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/district_tag"
                        android:text="@string/upa_district_tag" />
                    <View
                        android:id="@+id/line3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="35dp"
                        android:background="@color/mediumGrey"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="@dimen/content_size"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/district"
                        android:text="@string/upa_district" />

                </TableRow>
                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/mediumGrey"
                    />

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/content_size"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/city_tag"
                        android:text="@string/upa_city_tag" />
                    <View
                        android:id="@+id/line5"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="35dp"
                        android:background="@color/mediumGrey"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="@dimen/content_size"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/city"
                        android:text="@string/upa_city" />
                </TableRow>
                <View
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/mediumGrey"
                    />

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/content_size"
                        android:textColor="@color/darkGrey"
                        android:id="@+id/state_tag"
                        android:text="@string/upa_state_tag" />
                    <View
                        android:id="@+id/line7"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="35dp"
                        android:background="@color/mediumGrey"
                        />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/content_size"
                    android:textColor="@color/darkGrey"
                    android:id="@+id/state"
                    android:text="@string/upa_state" />
            </TableRow>
            </TableLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv3"
            card_view:cardBackgroundColor="#CDF9F9F9"
            card_view:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            >


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_size"
                    android:id="@+id/porte_tag"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/upa_porte_tag"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/darkGrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_size"
                    android:id="@+id/porte"
                    android:text="@string/upa_porte"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/darkGrey"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_info_outline_dark_grey_24dp"
                    android:clickable="true"
                    />


            </android.support.v7.widget.LinearLayoutCompat>



        </android.support.v7.widget.CardView>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/callbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/call_button"
            android:drawableLeft="@drawable/ic_call_white_24dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/content_size"
            android:text="@string/phone_number"
            android:paddingLeft="45dp"
            android:paddingRight="50dp"
            android:onClick="callPlace"
            />
        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/call_button"
            android:drawableLeft="@drawable/ic_directions_white_24dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/content_size"
            android:text="@string/getroute"
            android:paddingLeft="45dp"
            android:paddingRight="30dp"
            android:onClick="getRoute"
            />



    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>
