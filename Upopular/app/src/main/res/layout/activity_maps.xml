<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    map:uiZoomGestures="true"
    map:cameraZoom="7"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="inovapps.upopular.MapsActivity" >

<fragment
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:scrollbars="vertical"

    class="com.google.android.gms.maps.SupportMapFragment"/>

<LinearLayout
    android:id="@+id/radio_group_list_selector"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
     >

    <Button
        android:id="@+id/radioPopular"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="UPA"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_local_hospital_black_24dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_weight="1"
        />
    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <Button
        android:id="@+id/radioAZ"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:drawableLeft="@drawable/ic_local_pharmacy_black_24dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
